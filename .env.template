# OPENAI_API_KEY=sk-proj-abcd1234...
# ANTHROPIC_API_KEY=sk-ant-api03-abcd1234...
# GOOGLE_API_KEY=AIzaSyABCD1234...
# SEMANTIC_SCHOLAR_API_KEY=abcd1234efgh5678...

