# ===== AI PROVIDER API KEYS =====
# Replace these placeholder values with your real API keys in Streamlit Cloud

# OpenAI API Key (for GPT-4 and other models)
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY = "your_openai_api_key_here"

# Anthropic Claude API Key (for Claude models)
# Get your key from: https://console.anthropic.com/
ANTHROPIC_API_KEY = "your_anthropic_api_key_here"

# Google Gemini API Key (for Gemini models)
# Get your key from: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY = "your_google_api_key_here"

# ===== ACADEMIC DATABASE API KEYS =====

# Semantic Scholar API Key (for enhanced paper search)
# Get your key from: https://www.semanticscholar.org/product/api
SEMANTIC_SCHOLAR_API_KEY = "your_semantic_scholar_api_key_here"

# Crossref API Key (optional - for enhanced Crossref access)
# Get your key from: https://www.crossref.org/services/metadata-delivery/rest-api/
CROSSREF_API_KEY = "your_crossref_api_key_here"

# ===== APPLICATION CONFIGURATION =====

# Preferred AI provider (openai, anthropic, gemini)
PREFERRED_AI_PROVIDER = "openai"

# Debug mode (true/false)
DEBUG_MODE = false

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL = "INFO"

# ===== RATE LIMITING CONFIGURATION =====

# Semantic Scholar rate limit (seconds between requests)
SEMANTIC_SCHOLAR_RATE_LIMIT = 1.1

# Maximum retries for API requests
MAX_API_RETRIES = 3

# Request timeout (seconds)
REQUEST_TIMEOUT = 15

# ===== CACHE CONFIGURATION =====

# Cache duration for search results (seconds)
CACHE_DURATION = 3600

# Enable/disable caching (true/false)
ENABLE_CACHE = true

# ===== EXPORT CONFIGURATION =====

# Maximum papers per export
MAX_EXPORT_PAPERS = 100

# Default export format (json, yaml, csv, excel)
DEFAULT_EXPORT_FORMAT = "json"

# ===== SECURITY CONFIGURATION =====

# Session secret key (generate a random string)
SESSION_SECRET_KEY = "your_random_session_secret_here"

# Enable/disable API key validation (true/false)
VALIDATE_API_KEYS = true

